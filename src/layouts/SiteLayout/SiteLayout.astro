---
import Footer from "./Footer.astro";
import Header from "./Header.astro";
import "../../styles/global.css";

const isDev = import.meta.env.DEV;
---

<!-- WARNING all other Layouts should use this as the root element for flex
 dependencies resulting in expected styling --><!-- TODO understand meta and other head tag things to maximize SEO --><!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Makeup by Ellie</title>
  </head>
  {isDev ?
  // <!-- create and use a font class -->
  <body class="mbe-bg flex flex-col min-h-screen space-y-24">
    <Header />
    <main class="flex flex-col flex-grow my-12">
      <slot />
    </main>
    <Footer />
  </body> : <div>under construction...</div>
  }
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
